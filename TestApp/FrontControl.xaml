<UserControl x:Class="TestApp.FrontControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestApp"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="5">
            <Grid>
                <Viewbox>
                    <TextBlock Height="200" Width="200" Text="This is a WPF Textblock inside WPF border over Winforms control ;)" TextWrapping="WrapWithOverflow" FontSize="22" TextAlignment="Center"></TextBlock>
                </Viewbox>
            </Grid>
        </Border>
    </Grid>
</UserControl>
